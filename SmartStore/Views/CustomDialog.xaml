<Window x:Class="SmartStorePOS.Views.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SmartStorePOS.ViewModels" xmlns:conv="clr-namespace:SmartStorePOS.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}"
        d:DesignHeight="200" d:DesignWidth="400"
        WindowStyle="None"
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        MinWidth="400" MaxWidth="600">

    <Window.Resources>
        <conv:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" 
            BorderBrush="{StaticResource PrimaryBrush}" 
            BorderThickness="1"
            CornerRadius="6"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#30000000"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="6,6,0,0">
                <Grid>
                    <TextBlock Text="{Binding Title}" 
                               Margin="15,10" 
                               Foreground="White" 
                               FontWeight="SemiBold"/>
                    <Button Content="✕" 
                            Command="{Binding CloseCommand}"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="16"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding Message}" 
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,10,0,20"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Margin="0,10,0,0">

                    <!-- Confirmation Dialog Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding DialogType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:DialogType.Confirmation}}">
                        <Button Content="OK" 
                                Command="{Binding OkCommand}" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="100" 
                                Margin="0,0,10,0"/>
                        <Button Content="Cancel" 
                                Command="{Binding CancelCommand}" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="100"/>
                    </StackPanel>

                    <!-- Yes/No Dialog Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding DialogType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:DialogType.YesNo}}">
                        <Button Content="Yes" 
                                Command="{Binding YesCommand}" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="100" 
                                Margin="0,0,10,0"/>
                        <Button Content="No" 
                                Command="{Binding NoCommand}" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="100"/>
                    </StackPanel>

                    <!-- Info Dialog Button -->
                    <Button Content="OK" 
                            Command="{Binding OkCommand}" 
                            Style="{StaticResource PrimaryButton}" 
                            Width="100"
                            Visibility="{Binding DialogType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static vm:DialogType.Info}}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>