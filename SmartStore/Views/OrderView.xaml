                    <!-- QR Code Button - Chỉ hiển thị khi ở trạng thái OrderCreatedState -->
                    <Button Command="{Binding QRCodePaymentCommand}" 
                        Visibility="{Binding IsShowOrderButton, Converter={StaticResource BooleanToVisibilityConverter}}" 
                        Width="140" Height="60" 
                        Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="SemiBold"
                        Name="BtnQRCodePayment"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,20,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#4CAF50" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#4CAF50" 
                                                        BlurRadius="15" 
                                                        ShadowDepth="2" 
                                                        Opacity="0.3"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#43A047"/>
                                        <Setter TargetName="border" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8B3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="QR Code" />
                        </StackPanel>
                    </Button>

                    <!-- Card Reader Status -->
                    <Border Background="#FFECB3" BorderBrush="#FFE082" BorderThickness="0" CornerRadius="8" Width="200" Padding="15,8" Margin="0,0,0,0" Visibility="{Binding IsCardReaderActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8D1;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding CardReaderStatus}" FontSize="14" FontWeight="SemiBold" Foreground="#FF6F00" VerticalAlignment="Center"/>
                            </StackPanel>
                            <ProgressBar IsIndeterminate="True" Height="2" Margin="0,5,0,0" Background="Transparent" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
